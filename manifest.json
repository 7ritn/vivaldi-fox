{
  "manifest_version": 2,
  "name": "VivaldiFox",
  "version": "2.0",
  "description": "Add-on adding Vivaldi-style colouring to the browser",
  "permissions": ["theme", "tabs", "<all_urls>"],
  "background": {
    "scripts": [
      "background/color-utils.js",
      "background/theme.js", 
      "background/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["data/contentscript.js"],
      "run_at": "document_end"
    }
  ],
  "author": "Tim Nguyen",
  "applications": {
    "gecko": {
      "id": "vivaldi-fox@tim-addons.com",
      "strict_min_version": "45.0"
    }
  }
}
